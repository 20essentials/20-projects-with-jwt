---
import '@/styles/global.css';
import { baseUrl } from '@/utils/functions';
const favicon = baseUrl('/assets/favicon.webp');
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href={favicon} />
    <title>20 Projects With JWT</title>
  </head>
  <body>
    <div class='background'>
      <div class='gradient-sphere'></div>
      <div class='gradient-sphere'></div>
      <div class='gradient-sphere'></div>
      <div class='gradient-sphere'></div>
    </div>

    <slot />
  </body>
</html>

<style>
  .background {
    position: fixed;
    width: 100%;
    height: 100%;
    overflow: hidden;
    perspective: 1000px;
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    background: #0f0c29;
    background: linear-gradient(45deg, #24243e, #302b63, #0f0c29);
    transition: background 0.5s ease;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: -1;
  }

  .gradient-sphere {
    position: absolute;
    width: 20vmax;
    height: 20vmax;
    border-radius: 50%;
    filter: blur(5vmax);
    animation: float 15s infinite;
    opacity: 0.5;
    transition: all 0.3s ease;
    mix-blend-mode: screen;
  }

  .gradient-sphere:hover {
    filter: blur(10vmax);
    transform: scale(1.5);
    opacity: 0.8;
  }

  .gradient-sphere:nth-child(1) {
    background: radial-gradient(circle at center, #ff0080, #ff00ff);
    top: 20%;
    left: 20%;
    animation:
      float 15s infinite,
      pulse 4s infinite;
  }

  .gradient-sphere:nth-child(2) {
    background: radial-gradient(circle at center, #00ff80, #00ffff);
    top: 60%;
    left: 60%;
    animation:
      float 15s infinite reverse,
      pulse 4s infinite 1s;
  }

  .gradient-sphere:nth-child(3) {
    background: radial-gradient(circle at center, #8000ff, #4000ff);
    top: 40%;
    left: 40%;
    animation:
      float 15s infinite,
      pulse 4s infinite 2s;
  }

  .gradient-sphere:nth-child(4) {
    background: radial-gradient(circle at center, #ff8000, #ff4000);
    top: 80%;
    left: 30%;
    animation:
      float 15s infinite reverse,
      pulse 4s infinite 3s;
  }

  @keyframes float {
    0% {
      transform: translate(0, 0) scale(1) rotate(0deg);
    }
    33% {
      transform: translate(30px, -50px) scale(1.1) rotate(120deg);
    }
    66% {
      transform: translate(-20px, 20px) scale(0.9) rotate(240deg);
    }
    100% {
      transform: translate(0, 0) scale(1) rotate(360deg);
    }
  }

  @keyframes pulse {
    /* 0% {
      box-shadow: 0 0 50px rgba(255, 255, 255, 0.1);
    }
    50% {
      box-shadow: 0 0 100px rgba(255, 255, 255, 0.3);
    }
    100% {
      box-shadow: 0 0 50px rgba(255, 255, 255, 0.1);
    } */
  }

  .background::before {
    content: '';
    position: absolute;
    width: 100%;
    height: 100%;
    background-image: radial-gradient(
        circle at 20% 30%,
        rgba(255, 255, 255, 0.1) 1px,
        transparent 1px
      ),
      radial-gradient(
        circle at 60% 70%,
        rgba(255, 255, 255, 0.1) 1px,
        transparent 1px
      ),
      radial-gradient(
        circle at 40% 50%,
        rgba(255, 255, 255, 0.1) 1px,
        transparent 1px
      );
    background-size: 50px 50px;
    animation: sparkle 4s linear infinite;
  }

  @keyframes sparkle {
    0% {
      opacity: 0.3;
    }
    50% {
      opacity: 0.7;
    }
    100% {
      opacity: 0.3;
    }
  }
</style>

